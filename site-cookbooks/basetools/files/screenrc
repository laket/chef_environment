defkanji utf8
escape ^z^z

#termcap kterm 'hs:ts=\E]2;:fs=\007:ds=\E]0:screen\007'
#terminfo kterm 'hs:ts=\E]2;:fs=\007:ds=\E]0:screen\007'

vbell off
defscrollback 5000
startup_message off

hardstatus on
#hardstatus alwayslastline "screen |%c %m/%d | %w"
hardstatus alwayslastline "%2c %m/%d | %`%-w%{=b bw}%n %t%{-}%+w"

bind ^x
